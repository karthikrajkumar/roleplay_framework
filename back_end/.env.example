# Environment Configuration for AI Roleplay Platform Backend

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://roleplay_user:roleplay_password@localhost:5432/roleplay_platform
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=30

# AI Provider API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key

# Message Queue
RABBITMQ_URL=amqp://roleplay_user:roleplay_password@localhost:5672/
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Service Discovery
CONSUL_URL=http://localhost:8500

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@roleplayplatform.com
SMTP_FROM_NAME=AI Roleplay Platform

# File Storage
STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=roleplay-platform-storage

# Monitoring & Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
PROMETHEUS_METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://roleplayplatform.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# WebRTC Configuration
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_PASSWORD=your-turn-password

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_WEBRTC=true
ENABLE_VECTOR_SEARCH=true
ENABLE_AI_GENERATION=true
ENABLE_REAL_TIME_COLLABORATION=true

# Development Settings
AUTO_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
MOCK_AI_RESPONSES=false
SKIP_EMAIL_VERIFICATION=false

# Security Settings
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Performance Settings
MAX_UPLOAD_SIZE_MB=10
MAX_MESSAGE_LENGTH=10000
MAX_CONVERSATION_HISTORY=1000
CACHE_TTL_SECONDS=300

# Service Ports (for development)
API_GATEWAY_PORT=8000
USER_MANAGEMENT_PORT=8001
ROLEPLAY_SERVICE_PORT=8002
AI_ORCHESTRATION_PORT=8003
NOTIFICATION_SERVICE_PORT=8004
ANALYTICS_SERVICE_PORT=8005
REAL_TIME_COMMUNICATION_PORT=8006